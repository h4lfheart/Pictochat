<UserControl x:Class="Pictochat.Pages.HealthAndSafety"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="576" d:DesignWidth="768" MouseDown="OnMouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Row="0" Grid.RowSpan="2" Source="/Pictochat;component/Resources/HealthAndSafety.png" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <Border Name="BounceFadeBox" Grid.Row="1" Background="{StaticResource BackgroundBrush}"/>
    </Grid>
</UserControl>
