<UserControl x:Class="Pictochat.Controls.MessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="{StaticResource DSFont}" Width="576">
    <Border Background="{StaticResource BackgroundBrush}" BorderThickness="2" BorderBrush="{StaticResource TextBrush}" Margin="0 5 0 0">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
        
            <TextBlock Grid.Row="0" Name="Name" Text="Username" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"></TextBlock>
            <TextBlock Grid.Row="1" Name="Message" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" TextWrapping="Wrap"></TextBlock>
            <Image Grid.Row="1" Name="PreviewImage" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Grid>
    </Border>
</UserControl>
